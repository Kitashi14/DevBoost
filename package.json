{
  "name": "devboost",
  "displayName": "DevBoost",
  "description": "DevBoost is a Visual Studio Code extension built to supercharge developer productivity through AI-driven automation and workflow optimization. DevBoost streamlines repetitive coding tasks and lays the foundation for a suite of intelligent tools to enhance software development. Its current feature, SmartCmd, creates one-click buttons for common tasks, making workflows faster and more efficient.",
  "version": "0.1.0",
  "publisher": "devboost",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "devboost-sidebar",
          "title": "DevBoost",
          "icon": "$(rocket)"
        }
      ]
    },
    "views": {
      "devboost-sidebar": [
        {
          "id": "devboost.buttonsView",
          "name": "DevBoost",
          "icon": "$(rocket)"
        }
      ]
    },
    "commands": [
      {
        "command": "DevBoost.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "devboost.smartCmdCreateButtons",
        "title": "SmartCmd: Create AI Suggested Buttons for this workspace",
        "icon": "$(sparkle)"
      },
      {
        "command": "devboost.smartCmdCreateCustomButton",
        "title": "SmartCmd: Create Custom Button",
        "icon": "$(add)"
      },
      {
        "command": "devboost.executeButton",
        "title": "Execute Button",
        "icon": "$(play)"
      },
      {
        "command": "devboost.deleteButton",
        "title": "Delete Button",
        "icon": "$(trash)"
      },
      {
        "command": "devboost.editButton",
        "title": "Edit Button",
        "icon": "$(edit)"
      },
      {
        "command": "devboost.refreshButtons",
        "title": "Refresh Buttons",
        "icon": "$(refresh)"
      },
      {
        "command": "devboost.openButtonsFile",
        "title": "Open Buttons File",
        "icon": "$(file-code)"
      },
      {
        "command": "devboost.addToGlobal",
        "title": "Add to Global Buttons",
        "icon": "$(globe)"
      },
      {
        "command": "devboost.openScriptFile",
        "title": "Open Script File",
        "icon": "$(file-code)"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "devboost.smartCmdCreateButtons",
          "when": "view == devboost.buttonsView && viewItem == smartcmd",
          "group": "inline@1"
        },
        {
          "command": "devboost.smartCmdCreateCustomButton",
          "when": "view == devboost.buttonsView && viewItem == smartcmd",
          "group": "inline@2"
        },
        {
          "command": "devboost.refreshButtons",
          "when": "view == devboost.buttonsView && viewItem == smartcmd",
          "group": "inline@3"
        },
        {
          "command": "devboost.openButtonsFile",
          "when": "view == devboost.buttonsView && viewItem == section",
          "group": "inline@1"
        },
        {
          "command": "devboost.smartCmdCreateCustomButton",
          "when": "view == devboost.buttonsView && viewItem == section",
          "group": "inline@2"
        },
        {
          "command": "devboost.editButton",
          "when": "view == devboost.buttonsView && viewItem =~ /Button$/",
          "group": "1_modify@1"
        },
        {
          "command": "devboost.openScriptFile",
          "when": "view == devboost.buttonsView && viewItem =~ /ScriptButton$/",
          "group": "1_modify@2"
        },
        {
          "command": "devboost.addToGlobal",
          "when": "view == devboost.buttonsView && viewItem == workspaceButton || viewItem == workspaceScriptButton",
          "group": "1_modify@3"
        },
        {
          "command": "devboost.deleteButton",
          "when": "view == devboost.buttonsView && viewItem =~ /Button$/",
          "group": "1_modify@4"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.9.2",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3"
  }
}
